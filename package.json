  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "render-start": "node render-start.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security": "npm audit --audit-level=moderate",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "optimize": "node --max-old-space-size=4096 server.js",
    "health-check": "curl -f http://localhost:10000/api/health || exit 1",
    "build": "npm run lint && npm run security",
    "postinstall": "npm run build",
    "monitor": "node -e \"console.log('ðŸ”„ Monitoring active...')\""
