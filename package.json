    "axios": "^1.5.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "fluent-ffmpeg": "^2.1.2",
    "jsdom": "^23.0.1",
    "canvas": "^2.11.2",
    "youtube-api": "^2.0.9",
    "googleapis": "^126.0.1",
    "node-media-server": "^2.8.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
