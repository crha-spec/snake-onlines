{
  "name": "video-oyun-platformu",
  "version": "2.0.0",
  "description": "Gerçek zamanlı video izleme, sohbet ve görüntülü arama platformu",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "render-start": "node server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security": "npm audit --audit-level=moderate",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "optimize": "node --max-old-space-size=4096 server.js",
    "health-check": "curl -f http://localhost:10000/api/health || exit 1"
  },
  "keywords": [
    "video",
    "realtime",
    "chat",
    "webrtc",
    "socket.io",
    "streaming",
    "turkey",
    "turkish"
  ],
  "author": "Video Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^3.0.8",
    "express-rate-limit": "^6.8.1",
    "cookie-parser": "^1.4.6",
    "uuid": "^9.0.0",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.4.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "fluent-ffmpeg": "^2.1.2",
    "jsdom": "^22.1.0",
    "canvas": "^2.11.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "render": {
    "start": "npm run render-start",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300,
    "env": {
      "NODE_ENV": "production",
      "PORT": "10000"
    }
  },
  "volta": {
    "node": "18.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crha-spec/snake-onlines.git"
  },
  "bugs": {
    "url": "https://github.com/crha-spec/snake-onlines/issues"
  },
  "homepage": "https://github.com/crha-spec/snake-onlines#readme"
}
