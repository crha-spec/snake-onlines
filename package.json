    "turkey",
    "turkish",
    "youtube-api",
    "video-sync",
    "webrtc-stun",
    "video-chat",
    "render",
    "capacitor"
  ],
  "author": "Video Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "cors": "^2.8.5",
